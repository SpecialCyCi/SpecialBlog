body{
    font-family: Arial,Helvetica,sans-serif;
    -webkit-font-smoothing: antialiased;
}
a{
    text-decoration: none;
}
::selection {
    background:#de29dc;
    color:#ffffff;
}

::-moz-selection {
    background:#de29dc;
    color:#ffffff;
}
::-webkit-selection {
    background:#de29dc;
    color:#ffffff;
}
.row{
    max-width: 100%;
}
#header{
    margin-top: 15px;
    max-width: 80%;
}
#footer {
    max-width: 100%;
    padding: 10px 10% 0 10%;
    min-height:160px;   /* Height of the footer */
    background: rgb(0, 210, 117);
}
#body{
    margin-top: 20px;
    margin-bottom: 20px;
    max-width: 80%;
}
.logo_container{
    height: 60px;
}
.logo_container img{
    height: 50px;
}
.nav_container{
    height: 60px;
}
.nav_container div{
    line-height: 3em;
    float: right;
}
.nav_container a{
    font-size: 15px;
    color: #5e5c5c;
    text-decoration: none;
    vertical-align: middle;
}
.nav_container span{
    margin-left: 12px;
    margin-right: 12px;
    font-size: 16px;
    color: #d1d1d1;
}
.header_shadow_bar{
    height: 7px;
    background-color: rgb(0, 188, 62);
    -moz-box-shadow: 0px -2px 3px #00a737 inset;             /* For Firefox3.6+ */
    -webkit-box-shadow: 0px -2px 3px #00a737 inset;          /* For Chrome5+, Safari5+ */
    box-shadow: 0px -2px 3px #00a737 inset;                  /* For Latest Opera */
}
.header_color_bar{
    height: 1px;
    position: relative;
    top: 10px;
    background-color: #cccccc;
}
.footer_color_bar{
    display: block;
    height: 5px;
    background-color: #f1f1f1;
}
.website_container {
    color: #ffffff;
    font-size: 14px;
    text-align: left;
}
.website_container p{
    line-height: 17px;
}
.website_container a{
    color: #ffffff;
}
.footer_logo_container img{
    float: right;
    height: 140px;
}
.sub_nav_title{
    color: #383838;
    font-size: 20px;
    text-align: left;
}
.load_more{
    margin: auto;
    margin-top: 10px;
    color: #7c7d7f;
    text-align: center;
    width: 120px;
    padding: 10px;
    background-color: #ebebeb;
    border-radius: 5px;
}
.load_more:hover{
    cursor: pointer;
}
.load_more:active{
    color: #ffffff;
    background-color: #d6d6d6;
}
.split{
    height: 1px;
    margin-bottom: 20px;
    background: url(<%= asset_path "split.png" %>);
}
.flash{
    margin-top: 10px;
    background-color: #fd005f;
    color: #ffffff;
    font-size: 16px;
    padding: 10px;
    text-align: center;
}
.pagination{
    text-align: center;
}
.clear{
    clear: both;
}
/* max-width 640px, mobile-only styles, use when QAing mobile issues */
@media only screen and (max-width: 40em) {
    #header{
        max-width: 100%;
    }
    #body{
        max-width: 100%;
    }
    #footer {
        padding: 0;
    }
    .nav_container{
        text-align: center;
    }
    .nav_container div{
        float: none;
    }
    .nav_container a{
        font-size: 25px;
        color: #5e5c5c;
        text-decoration: none;
    }
    .nav_container span{
        font-size: 25px;
        color: #d1d1d1;
        position: relative;
        top: 2px;
    }
}
